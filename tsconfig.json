{
  "compilerOptions":{
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es2016",
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "inlineSources": false,
    "lib": ["es2016"],
    "typeRoots":[
      "./node_modules/@types",
      "./typings"
    ],
    "types" : ["node"],
    "allowJs":true
  },
  "exclude":[
    "node_modules"
  ]
}
